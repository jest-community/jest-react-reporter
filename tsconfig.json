{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib/"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
