{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib/"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
