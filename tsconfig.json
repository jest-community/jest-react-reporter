{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": false,
    "jsx": "react",
    "declaration": false,
    "isolatedModules": true,
    "noImplicitReturns": true,
    // ink requires this
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
